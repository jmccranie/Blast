<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cen3031.blast"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.READ_PHONE_STATE" />
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/blast_icon"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        <activity
            android:name="com.cen3031.blast.MainMenuActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.cen3031.blast.PlayMenuActivity"
            android:label="@string/title_activity_play_menu"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.cen3031.blast.SettingsMenuActivity"
            android:label="@string/title_activity_settings_menu"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.cen3031.blast.HelpMenuActivity"
            android:label="@string/title_activity_help_menu"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.cen3031.blast.DeviceListActivity"
            android:label="@string/title_activity_device_list"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.cen3031.blast.BluetoothChat"
            android:label="@string/title_activity_bluetooth_chat"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.cen3031.blast.BluetoothChatService"
            android:label="@string/title_activity_bluetooth_chat_service"
            android:screenOrientation="portrait" >
        </activity>
        <activity android:name="com.cen3031.blast.ActiveGameMenuActivity" >
        </activity>
        <activity android:name="com.cen3031.blast.GameState" >
        </activity>
        <activity android:name="com.cen3031.blast.GameStateArrayAdaptor" >
        </activity>
        <activity
            android:name="com.cen3031.blast.GameActivity"
            android:label="@string/title_activity_game" >
        </activity>
        <activity android:name="com.cen3031.blast.UnitAllocationActivity" >
        </activity>
        <activity
            android:name="com.cen3031.blast.AvailGamesActivity"
            android:label="@string/title_activity_avail_games" >
        </activity>
    </application>

</manifest>