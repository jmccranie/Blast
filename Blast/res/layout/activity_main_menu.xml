<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_menu_relative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_background"
    tools:context=".MenuActivity" >
    
    <ImageView android:id="@+id/menu_icon"
        android:src="@drawable/blast_icon"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    
    <LinearLayout android:id="@+id/ll_main_menu"
        android:orientation="vertical"
        android:layout_below="@id/menu_icon"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView android:id="@+id/tv_play"
            style="@style/MenuFont"
            android:onClick="onClick"
            android:text="@string/tv_main_menu_play" />
        
        <TextView android:id="@+id/tv_settings"
            android:text="@string/tv_main_menu_settings"
            android:onClick="onClick"
            style="@style/MenuFont" />
        
        <TextView android:id="@+id/tv_help"
            android:text="@string/tv_main_menu_help"
            android:onClick="onClick"
            style="@style/MenuFont" />
        
    </LinearLayout>

</RelativeLayout>