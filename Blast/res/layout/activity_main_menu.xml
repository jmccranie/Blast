<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_menu_relative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_background_tank"
    tools:context=".MenuActivity" >
    
    <ImageView android:id="@+id/menu_icon"
        android:src="@drawable/blast_icon"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    
    <LinearLayout android:id="@+id/ll_main_menu"
        android:orientation="vertical"
        android:layout_below="@id/menu_icon"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        
    </LinearLayout>

    <Button
        android:id="@+id/tv_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_play"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn"
        android:onClick="btn_settings"
        android:text="@string/settings" />

    <Button
        android:id="@+id/tv_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_settings"
        android:layout_below="@+id/tv_settings"
        android:background="@drawable/btn"
        android:onClick="btn_help"
        android:text="@string/help" />

    <Button
        android:id="@+id/tv_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_settings"
        android:layout_alignTop="@+id/ll_main_menu"
        android:layout_marginTop="14dp"
        android:background="@drawable/btn"
        android:onClick="btn_play"
        android:text="@string/play" />

</RelativeLayout>